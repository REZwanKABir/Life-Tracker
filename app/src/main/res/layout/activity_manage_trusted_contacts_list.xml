<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.ManageTrustedContactsList">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="You Can chose 2 number only"
            android:textSize="@dimen/_13ssp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:padding="@dimen/_10sdp"/>

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:listitem="@layout/item_managelistcontact"
            android:id="@+id/manageTrustedPeople"/>

        <Space
            android:layout_width="0dp"
            android:layout_height="@dimen/_20sdp"/>

        <Button
            android:id="@+id/SaveManageBtn"
            android:layout_width="@dimen/_120sdp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/shape_savebutton_contactlist"
            android:text="Done" />
        <Space
            android:layout_width="0dp"
            android:layout_height="@dimen/_20sdp"/>

    </LinearLayout>




</ScrollView>